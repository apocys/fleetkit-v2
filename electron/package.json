{
  "name": "fleetkit",
  "version": "2.0.0",
  "description": "Your AI team, visualized. Pok√©mon-style virtual office for AI agents.",
  "main": "main.js",
  "author": "FleetKit Team <hello@fleetkit.dev>",
  "license": "MIT",
  "homepage": "https://fleetkit.dev",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "dev.fleetkit.app",
    "productName": "FleetKit",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": ["dmg", "zip"]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": ["nsis"]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": ["AppImage", "deb"]
    },
    "files": [
      "main.js",
      "preload.js",
      "data-provider.js",
      "renderer/**",
      "assets/**",
      "../src/**",
      "../office-gameboy/**",
      "../office-cyberpunk/**",
      "../office-executive/**",
      "../lib/**",
      "../landing/**"
    ],
    "extraResources": [],
    "asar": true,
    "dmg": {
      "title": "FleetKit ${version}",
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    },
    "nsis": {
      "oneClick": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "allowToChangeInstallationDirectory": false
    }
  }
}
